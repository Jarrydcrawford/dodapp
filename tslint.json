{
  "extends": ["tslint-react", "tslint-config-airbnb", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "import-name": false,
    "object-shorthand-properties-first": false,
    "ordered-imports": [true, { "grouped-imports": true }],
    "strict-boolean-expressions": false,
    "variable-name": false,
    "jsx-no-lambda": false,
    "function-name": [true, { "function-regex": "^[a-zA-Z][\\w\\d]+$" }]
  }
}
